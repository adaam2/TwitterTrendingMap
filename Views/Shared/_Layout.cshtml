<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="description" content="Twitter Streaming API Data Virtualization made by Adam James Bull, web developer"/>
    <meta name="application-name" content="News Before It Happens"/>
    <meta name="viewport" content="width=device-width,minimum-scale=1,initial-scale=1,maximum-scale=1,user-scalable=0" />
    <title>@ViewBag.Title</title>
    <link href='http://fonts.googleapis.com/css?family=Lato:400,700,300' rel='stylesheet' type='text/css' />
    <link rel="stylesheet" href="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/themes/flick/jquery-ui.css" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/main.css" rel="stylesheet" type="text/css"/>
    <link href="~/css/animate.css" rel="stylesheet" type="text/css"/>
    <link href="~/css/sky-tabs.css" rel="stylesheet" type="text/css"/>

    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="blue">
    <div id="layout" class="container">
        <header>
            <h1>Twitter Data Visualization</h1>
            <div class="connection-status-panel">
                <h2>Connection Statuses</h2>
                <label>SignalR Status:</label>
                <span class="status" id="signalr-status"></span>
                <label>Twitter API Status:</label>
                <span class="status" id="twitterapi-status"></span>
            </div>
        </header>
        <main>
            @RenderBody()
        </main>
        <div id="layout_footer"></div>
        <footer id="footer">
            <a href="https://twitter.com/wherelionsroam">@@wherelionsroam</a>
        </footer>
        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </div>
    <script src="~/Scripts/jquery.signalR-2.0.3.min.js"></script>
    <script src="signalr/hubs"></script>
    <script src="https://maps.googleapis.com/maps/api/js?libraries=places&sensor=false"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/jquery-ui.min.js"></script>
    <script src="~/Scripts/markerclustererplus.js"></script>
    <script src="~/Scripts/myJS/main.js"></script>
    <script src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
    <script src="~/Scripts/jquery.livequery.min.js"></script>
    <script src="~/Scripts/jquery.timeago.js"></script>
    <script src="~/Scripts/jquery.geocomplete.min.js"></script>
</body>
</html>
